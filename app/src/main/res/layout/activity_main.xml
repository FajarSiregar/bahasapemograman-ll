<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cokelat"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/logo_phones_login" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:hint="Email"
        android:textColorHint="@color/cokelatMuda"
        android:backgroundTint="@color/cokelatMuda" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/cokelatMuda"
        android:backgroundTint="@color/cokelatMuda"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/cokelatMuda"
        android:text="Login"
        android:textColor="@color/cokelat"/>

    <TextView
        android:id="@+id/tvDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="5pt"
        android:textColor="@color/cokelatMuda"/>

    <TextView
        android:id="@+id/tvLupaPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lupa Password?"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="5pt"
        android:textColor="@color/cokelatMuda"/>

</LinearLayout>