<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cokelat"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".HomeActivity">

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi, Alex!"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:textSize="8pt"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temukan Handphone Impian Kamu!"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:textSize="8pt"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Brand"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:textSize="8pt"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/logo_iphone"
                    android:layout_marginLeft="30dp"/>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/logo_samsung"
                    android:layout_marginLeft="30dp" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/logo_vivo"
                    android:layout_marginLeft="30dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rekomendasi"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:textSize="8pt"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:layout_margin="20dp">


        </LinearLayout>

</LinearLayout>